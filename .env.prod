# 운영 환경 설정 (로컬 실행용)
SPRING_PROFILES_ACTIVE=prod

# 데이터베이스 설정 (로컬 Docker 접속)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/zzic
SPRING_DATASOURCE_USERNAME=zzic
SPRING_DATASOURCE_PASSWORD=zzic123
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA 설정
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Redis 설정 (로컬 Docker 접속)
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

# SSL 설정
SSL_KEYSTORE_PASSWORD=your-keystore-password

# 서버 설정
SERVER_PORT=8443

# 로깅 설정
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_POINT_ZZICBACK=INFO
